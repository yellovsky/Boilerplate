{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "commitlint": true,
  "ignoreDependencies": ["postcss", "@biomejs/biome", "@commitlint/cli"],
  "workspaces": {
    "apps/backend": {
      "nest": true,
      "prisma": true,
      "vitest": true,
      "ignoreDependencies": ["@prisma/client", "@generated/prisma", "@nestjs/mapped-types"]
    },
    "apps/frontend": {
      "entry": ["app/server/index.ts"],
      "remix": true,
      "tailwind": true,
      "ignoreDependencies": ["tailwindcss", "autoprefixer", "babel-plugin-react-compiler"]
    },
    "packages/theme": {
      "tailwind": true,
      "ignoreDependencies": ["tailwindcss"]
    },
    "packages/ui": {
      "tailwind": true,
      "ignoreDependencies": ["tailwindcss", "@repo/theme"]
    }
  }
}
