{
  "name": "backend",
  "version": "0.0.0",
  "description": "Backend (API) boilerplate",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typecheck": "tsc --noEmit",
    "biome": "biome check",
    "lint": "biome check && yarn typecheck",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "npx ts-node -r tsconfig-paths/register ./scripts/seed/index.ts",
    "postinstall": "prisma generate",
    "check:unused": "knip --max-issues 1"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      ".*\\.module\\.ts$"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.(test|spec)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  },
  "prisma": {
    "schema": "./prisma/schema"
  },
  "dependencies": {
    "@jest/globals": "29.7.0",
    "@nestjs/common": "11.1.1",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.1",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.1",
    "@nestjs/swagger": "11.2.0",
    "@prisma/client": "6.8.0",
    "@repo/api-models": "*",
    "accept-language-parser": "1.5.0",
    "bcrypt": "6.0.0",
    "casbin": "5.38.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "cookie-parser": "1.4.7",
    "date-fns": "4.1.0",
    "effect": "3.15.1",
    "i18next": "24.0.5",
    "nest-winston": "1.10.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "ramda": "0.30.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "uuid": "11.1.0",
    "winston": "3.17.0",
    "winston-daily-rotate-file": "5.0.0",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.4",
    "@faker-js/faker": "9.8.0",
    "@golevelup/ts-jest": "0.7.0",
    "@nestjs/cli": "11.0.7",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "11.1.1",
    "@types/accept-language-parser": "1.5.8",
    "@types/bcrypt": "5.0.2",
    "@types/cookie-parser": "1.4.8",
    "@types/express": "5.0.1",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.18",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/ramda": "0.30.2",
    "jest": "29.7.0",
    "jest-mock-extended": "4.0.0-beta1",
    "knip": "5.56.0",
    "prisma": "6.8.0",
    "ts-jest": "29.3.3",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.3"
  }
}
